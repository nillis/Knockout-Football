box-shadow()
  -webkit-box-shadow arguments
  -moz-box-shadow arguments
  box-shadow arguments

h1,
h2,
h3,
h4,
h5,
h6
    font-family 'Open Sans', sans-serif;
    font-weight normal;
    margin 2px 0px 5px 0px;
    padding 2px 0px;
    color #333;

div.hmeta 
    color #333;

::-webkit-outer-spin-button,
::-webkit-inner-spin-button 
    -webkit-appearance none;
    margin 0;

input[disabled]::-webkit-calendar-picker-indicator
    display none

.table th,
.table td
    text-align center

input.input-verysmall 
    width 30px;

td.fixtureTextItem 
    padding 13px;

div.team
    margin-bottom 20px;

i:hover 
    opacity 0.7;

.link 
    cursor: pointer

.form-actions 
    background-color inherit;
    border-top none;
    margin-top 0;
    padding 0;

input[disabled]
    background-color inherit
    border none
    box-shadow none
    cursor inherit
