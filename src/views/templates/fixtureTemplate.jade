| <script type="text/html" id="fixtureTemplate"> 

h2 Fixture
    // ko if: $root.admin
    button.btn(data-bind='click: category.sortFixture')
        i.icon-resize-vertical
    // /ko

table.table.table-striped.table-hover
    thead
        tr
            th Datum
            th Uur
            th.text-center Thuis
            th
            th
            th
            th.text-center Uit
    tbody(data-bind='foreach: $data')
        tr
            // ko if: $root.admin
            td
                input.input-medium(type='date', data-bind='value: date')
            td
                input.input-small(type='time', data-bind='value: time')
            // /ko
            // ko if: !$root.admin()
            td
                input.input-medium(type='date', disabled, data-bind='value: date')
            td
                input.input-small(type='time', disabled, data-bind='value: time')
            // /ko
            td.fixtureTextItem.text-center(data-bind='text: homeTeam().name()')
            td.text-center
                input.input-verysmall(type='number',min='0', data-bind='value: homeScore, valueUpdate: \'afterkeydown\'')
            td.fixtureTextItem.text-center -
            td.text-center
                input.input-verysmall(type='number',min='0', data-bind='value: awayScore, valueUpdate: \'afterkeydown\'')
            td.fixtureTextItem.text-center(data-bind='text: awayTeam().name()')

| </script>